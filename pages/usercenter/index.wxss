page {
  background-color: #f0eff5;
}

.user-header {
  width: 100%;
  height: 300rpx;
  background-image: url('http://img.hexun.com/2011-07-20/131594415.jpg');
  background-size: cover;
}

.user-header .setting {
  position: absolute;
  color: #fff;
  font-size: 28rpx;
  left: 20rpx;
  top: 3%;
}

.user-header .userinfo {
  position: absolute;
  left: 50%;
  top: 3%;
  transform: translate(-50%);
  display: flex;
  flex-direction: column;
  text-align: center;
}

.user-header .userimg {
  width: 100rpx;
  height: 100rpx;
  border-radius: 100rpx;
  background-color: skyblue;
}

.user-header .username {
  margin-top: 10rpx;
  color: #fff;
  font-size: 26rpx;
}

.user-header .usersize {
  display: block;
  width: 50rpx;
  height: 30rpx;
  background-color: yellow;
  border-radius: 5rpx;
  font-size: 24rpx;
  color: #000;
  line-height: 30rpx;
  text-align: center;
  margin: 0 auto;
  margin-top: 30rpx;
}

.user-integral {
  margin-top: 20rpx;
  padding: 24rpx 36rpx;
  background-color: #fff;
  font-size: 28rpx;
}

.user-integral_num {
  color: #e41436;
}

.my-order, .my-purse, .my-common {
  margin-top: 20rpx;
  width: 100%;
}

.my-order_title {
  width: 100%;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 24rpx 36rpx;
  font-size: 28rpx;
  color: #000;
  box-sizing: border-box;
  border-bottom: 2rpx solid #f0eff5;
}

.my-order .my-order_classify, .my-purse .my-purse_classify,
.my-common .my-common_classify {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}

.my-order .my-order_classify view {
  width: 20%;
  display: flex;
  flex-direction: column;
  padding: 17rpx 30rpx;
  margin-right: 2rpx;
  box-sizing: border-box;
  background-color: #fff;
  font-size: 21rpx;
  text-align: center;
  color: #666;
}

.my-order .my-order_classify .icon {
  font-size: 40rpx;
  color: #666;
}

.my-purse .my-purse_classify view, .my-common .my-common_classify view {
  width: 25%;
  display: flex;
  flex-direction: column;
  font-size: 24rpx;
  color: #666;
  text-align: center;
  padding: 18rpx 36rpx;
  margin-right: 2rpx;
  background-color: #fff;
  box-sizing: border-box;
  white-space: nowrap;
}

.my-purse .my-purse_classify .purse_num {
  font-size: 36rpx;
  color: #e41436;
  margin-bottom: 20rpx;
}

.my-common {
  background-color: #fff;
}

.my-common .my-common_classify view {
  margin-right: 0;
  border-right: 2rpx solid #f0eff5;
  border-bottom: 2rpx solid #f0eff5;
}

.my-common .my-common_classify .icon {
  font-size: 50rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.my-order .my-order_classify view:last-child,
.my-purse .my-purse_classify view:last-child,
.my-common .my-common_classify view:last-child {
  margin-right: 0;
}
