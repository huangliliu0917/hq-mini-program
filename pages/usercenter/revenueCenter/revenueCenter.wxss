/* pages/revenueCenter/revenueCenter.wxss */

.revenue-center {
  width: 100%;
  height: 100%;
  background-color: #f2f2f2;
}

.revenue-header {
  width: 100%;
  height: 184rpx;
  padding: 42rpx 49rpx 0;
  box-sizing: border-box;
  background-color: #af0810;
  color: #fff;
  font-size: 26rpx;
  display: flex;
  flex-direction: column;
  margin-bottom: 18rpx;
}

.revenue-money {
  font-size: 72rpx;
  margin-top: 21rpx;
}

.revenue-menu {
  width: 100%;
  background-color: #fff;
  /* float: left; */
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  text-align: center;
}

.revenue-menu view {
  width: 374rpx;
  height: 160rpx;
  display: flex;
  flex-direction: column;
  font-size: 26rpx;
  color: #000;
  padding-top: 44rpx;
  border-left: 2rpx solid #ddd;
  border-bottom: 2rpx solid #ddd;
  overflow: hidden;
  box-sizing: border-box;
}

.singular {
  font-size: 18rpx;
  color: #a2a2a2;
}

.revenue-chart_line {
  margin-top: 18rpx;
  /* padding: 38rpx 40rpx 0 40rpx; */
  background-color: #fff;
}

.revenue-chart_line text {
  display: block;
  font-size: 30rpx;
  color: #000;
  margin-left: 50rpx;
  padding: 38rpx 0;
  box-sizing: border-box;
}

.canvas {
  width: 100%;
  height: 400rpx;
}
