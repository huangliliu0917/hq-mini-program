<view class="user-header" style="background-image:url('{{userItem.BackGroundModel.UserCenterImg}}')">
  <text class='setting' catchtap='_goSetting'>设置</text>
  <view class='userinfo'>
    <image src='' class='userimg'></image>
    <text class='username'>{{userItem.WxNickName}}</text>
    <text class='usersize'><text>{{userItem.LevelName}}</text></text>
  </view>
</view>

<view class='my-order'>
  <view class='my-order_title'>
    <text>我的订单</text>
    <text class='allOrder' catchtap='_goOrder'>查看全部订单</text>
  </view>
  <view class='my-order_classify'>
    <view data-currentTab='1' catchtap='_goOrder'>
      <view class='order-classift_item'>
        <icon class='icon iconfont icon-wallet_icon'></icon>
        <text>待付款</text>
      </view>
       <view class='order-classift_num'>10</view> 
    </view>
    <view data-currentTab='2' catchtap='_goOrder'>
      <view class='order-classift_item'>
        <icon class='icon iconfont icon-dengdaihuankuan' style='font-size:44rpx;margin-bottom:4rpx;'></icon>
        <text>代发货</text>
      </view>
    </view>
    <view data-currentTab='3' catchtap='_goOrder'>
      <view class='order-classift_item'>
        <icon class='icon iconfont icon-daishouhuo'></icon>
        <text>待收货</text>
      </view>
    </view>
    <view data-currentTab='4' catchtap='_goOrder'>
      <view class='order-classift_item'>
        <icon class='icon iconfont icon-yisouhuo'></icon>
        <text>已收货</text>
      </view>
    </view>
    <view catchtap='_goAftersale'>
      <view class='order-classift_item'>
        <icon class='icon iconfont icon-navicon-wsgwjcsz'></icon>
        <text>售后</text>
      </view>
    </view>
  </view>
</view>

<view class='my-purse'>
  <view class='my-order_title'>
    <text>我的钱包</text>
    <text class='allOrder' catchtap="_goWithdraw">提现</text>
  </view>
  <view class='my-purse_classify'>
    <view catchtap='_goBalance'>
      <text class='purse_num'>0.00</text>
      <text>待结算</text>
    </view>
    <view data-integral='0' catchtap='_goIntegral'>
      <text class='purse_num'>354</text>
      <text>余额</text>
    </view>
    <view data-integral='1' catchtap='_goIntegral'>
      <text class='purse_num'>{{userItem.UserMBean}}</text>
      <text>觅豆</text>
    </view>
  </view>
</view>

<view style='margin-top:20rpx; '>
  <swiper indicator-dots="true" circular="true" autoplay="true" interval="4000" duration="500" style='height:{{imgHeight}}rpx'>
    <block wx:for="{{bannerItems}}" wx:key="{{item}}">
      <swiper-item>
        <view class="swiper-item">
          <image lazy-load='true' src='{{item.pictureUrl}}' bindload="imageLoad" style='height:{{imgHeight}}rpx;width:100%'></image>
        </view>
      </swiper-item>
    </block>
  </swiper>
</view>

<view class='my-common'>
  <view class='my-order_title'>
    <text>常用功能</text>
  </view>
  <view class='my-common_classify'>
    <view catchtap='_goNewsFeed'>
      <icon class='icon iconfont .icon-xiaoxizhongxin'></icon>
      <text>消息中心</text>
    </view>
    <view catchtap='_goCollectGoods'>
      <icon class='icon iconfont icon-wodeshoucang'></icon>
      <text>我的收藏</text>
    </view>
    <view>
      <icon class='icon iconfont icon-hongbao'></icon>
      <text>红包优惠券</text>
    </view>
    <view>
      <icon class='icon iconfont icon-kefu'></icon>
      <text>客服</text>
    </view>
  </view>
</view>

<view style=' height: 20rpx;'></view>