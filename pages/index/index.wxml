<import src="../template/goods-item/goods-item-template.wxml" />
<import src="../template/goods-item/goods-item-two-template.wxml" />
<import src="../template/goods-item/trademark-template.wxml" />


<!--pages/index/index.wxml-->
<view class='home-top'>
  <view class='index_header'>
    <view class='header_left'>
      拼多多
      <icon class='icon iconfont icon-icon--'></icon>
    </view>
    <view class='index_search' catchtap='searchShop'>
      <icon class="icon iconfont icon-sousuo"></icon>
      <text>搜优惠商品</text>
    </view>
    <view class='header_right'>
      <icon class="icon iconfont icon-ico_shoucangjia-copy"></icon>
    </view>
  </view>
  <view class='home-category' tag="类目">
    <scroll-view scroll-x="true" class="tab-h" scroll-left="{{scrollLeft}}">
    <block wx:for="{{category}}" wx:key="item">
        <view class="tab-item {{currentTab==index?'active':''}}"  data-current="{{index}}" bindtap="swichNav">{{item.title}}</view>
              </block>
    </scroll-view>
  </view>
</view>
<view class='home-index'>

  <view class="page-section page-section-spacing swiper">
    <swiper indicator-dots="true" autoplay="true" interval="3000" duration="0.5">
      <block wx:for="{{bannerItems}}" wx:key="*this">
        <swiper-item>
          <view class="swiper-item">
            <image src='{{item.imgSrc}}'></image>
          </view>
        </swiper-item>
      </block>
    </swiper>
  </view>

  <view class='goods-special-area'>
    <block wx:for="{{specialItems}}"  wx:key="item">
    <view class='special-box'>
      <view class='box2'>
        <image src='{{item.imgSrc}}'></image>     
      </view>
    </view>  
    </block>    
  </view>
</view>

<view class='home-goods-items'>
  <block wx:for="{{hotItems}}" wx:key="item">
    <template is="goodsItem" data="{{item}}" />
  </block>
</view>
<template is="trademarkGoods"></template>
<view class='home-goods-item-two'>
  <block wx:for="{{goodsItems}}" wx:key="item">
    <template is="itemTwo" data="{{item}}" />
  </block>
</view>

<!-- </view> -->
<view style='height:60px;'></view>