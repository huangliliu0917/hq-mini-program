@import '../template/goods-item/goods-item-template.wxss';
@import '../template/goods-item/goods-item-two-template.wxss';
@import '../template/category/category-two-template.wxss';
@import '../template/search/search-template.wxss';

page {
  background-color: #fff;
}

.home-category {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #8b8b8b;
  background-color: #fff;
}

.home-category-scroll .selected {
  color: #000;
}

.page-section-title {
  padding: 0;
}

.swiper-item {
  display: block;
  height: 350rpx;
}

.swiper-item image {
  width: 100%;
  height: 100%;
}

.page-section-title {
  margin-top: 60rpx;
  position: relative;
}

.home-goods-item-two {
  width: 100%;
  display: box;
}

.goods-special-area {
  width: 100%;
}

.goods-special-area .special-box {
  width: 50%;
  display: inline-block;
}

.goods-special-area .item0 {
  padding: 24rpx 0rpx 24rpx 24rpx;
}

.goods-special-area .item1 {
  padding: 24rpx 27rpx 24rpx 24rpx;
}

.goods-special-area .item2 {
  padding: 0 0 24rpx 27rpx;
}

.goods-special-area .item3 {
  padding: 0 27rpx 24rpx 24rpx;
}

.goods-special-area image {
  width: 100%;
  height: 199rpx;
}

.icon-more {
  position: absolute;
  right: 10rpx;
  width: 41rpx;
  height: 41rpx;
  color: #000;
}

.tab-h {
  height: 88rpx;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 88rpx;
  white-space: nowrap;
  left: 0;
  z-index: 99;
}

.tab-item {
  width: 100rpx;
  text-align: center;
  display: inline-block;
  font-size: 30rpx;
}

.tab-item.active {
  color: #000;
  position: relative;
}

.tab-item.active:after {
  content: "";
  display: block;
  height: 8rpx;
  width: 100rpx;
  background: #000;
  position: absolute;
  bottom: 0;
  border-radius: 16rpx;
}

.tab-item-none {
  width: 100rpx;
}

.category-two {
  width: 100%;
  display: box;
}

.category-two-show {
  display: block;
}

.category-two-display {
  display: none;
}

.icon-more-box {
  position: absolute;
  display: flex;
  flex-direction: column;
  align-items: center;
  right: 0;
  z-index: 600;
  width: 100rpx;
  height: 88rpx;
  background-color: #fff;
  text-align: center;
}

.home-category .icon-more {
  width: 90rpx;
  height: 100%;
  color: #000;
  font-weight: bold;
  margin-left: 50rpx;
  text-align: center;
  font-size: 41rpx;
}

.category-more {
  position: fixed;
  top: 80rpx;
  width: 100%;
  z-index: 501;
  background-color: #fff;
  color: #8b8b8b;
}

.category-more-b {
  padding: 20rpx 0;
}

.category-more .category-more-box {
  width: 25%;
  display: inline-block;
  text-align: center;
  font-size: 30rpx;
}

.category-more-item {
  height: 50rpx;
  line-height: 50rpx;
  margin: 10rpx;
  border: 1rpx solid #ccc;
  border-radius: 15rpx;
}

.category-more-title {
  text-align: center;
  font-size: 32rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-bottom: 1px solid #ccc;
}

.mask {
  z-index: 200;
  filter: alpha(opacity=50);
  -moz-opacity: 0.5;
  -khtml-opacity: 0.5;
  opacity: 0.2;
  height: 900rpx;
  background-color: #000;
  position: fixed;
  width: 100%;
  top: 0;
  overflow: hidden;
}

.body-view {
  width: 100%;
  text-align: center;
  font-size: 24rpx;
  color: #666;
}

