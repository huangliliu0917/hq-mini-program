.home-top {
  width: 100%;
  font-size: 24rpx;
  position: fixed;
  z-index: 500;
  border-bottom: 1px solid #f6f6f6;
}

.home-index-display {
  display: none;
}

.index_header {
  width: 100%;
  height: 80rpx;
  position: relative;
  padding-top: 8rpx;
  background-color: #fff;
}

.index_search {
  height: 32px;
  margin-left: 140rpx;
  margin-right: 105rpx;
  background-color:#F0EFF5;
  line-height: 32px;
  text-align: center;
  border-radius: 32rpx;
}

.icon-sousuo {
  color: #bfbfbf;
}

.index_search text {
  font-size: 14.5px;
  color: #bfbfbf;
  margin-left: 4px;
}

.header_left {
  width: 130rpx;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  line-height: 40px;
  text-align: center;
  font-size: 24rpx;
}

.icon-icon-- {
  position: absolute;
}

.header_right {
  width: 105rpx;
  height: 100%;
  position: absolute;
  top: 0;
  right: 0;
  line-height: 40px;
  text-align: center;
}

.icon-ico_shoucangjia-copy {
  font-size: 48rpx;
}
