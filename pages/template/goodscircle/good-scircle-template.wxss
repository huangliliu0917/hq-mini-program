.goods-circle_con {
  background-color: #f2f2f2;
  padding: 24rpx 28rpx 0 45rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: row;
  align-content: space-between;
  box-sizing: border-box;  
}

.goods-circle_con .logo image {
  margin-top: 20rpx;
  width: 60rpx;
  height: 60rpx;
}

.circle-con {
  padding-left: 32rpx;
  display: flex;
  flex-direction: column;
  align-content: space-between;
  box-sizing: border-box;
}

.circle-con .circle-con_title {
  font-size: 31rpx;
  color: #6e7ea4;
}

.circle-con .circle-con_con {
  margin-top: 30rpx;
  font-size: 29rpx;
  color: #333;
}

.circle-con .circle-con_con text {
  display: block;
  height: 48rpx;
}

.circle-con .cricle-con_img image {
  width: 187rpx;
  height: 187rpx;
  margin-right: 8rpx;
  margin-bottom: 16rpx;
}

.circle-con .cricle-con_release {
  font-size: 26rpx;
  color: #999;
}

.circle-con .cricle-con_release text {
  display: inline-block;
  margin-right: 58rpx;
}

.circle-con .cricle-con_share {
  margin-top: 20rpx;
  font-size: 21rpx;
  color: #ff5e61;
  margin-bottom: 18rpx;
}
.circle-con .cricle-con_share icon{
  font-size: 21rpx;
  margin-top: -20rpx;
}

.circle-con .cricle-con_foot {
  height: 80rpx;
  margin-left: -100rpx;
  border-top: 1px solid #b2b2b2;
  font-size: 24rpx;
  color: #777;
  display: flex;
  flex-direction: row;
  align-content: space-between;
}

.sava-img, .m-share {
  height: 80rpx;
  width: 50%;
  text-align: center;
  line-height: 80rpx;
}
.parting-line{
  width: 1px;
  height: 50rpx;
  margin-top: 10rpx;
  background-color: #b2b2b2;
}

.sava-img .icon-xiazai, .m-share .icon-xiazai10 {

  margin-right: 14rpx;
}
.m-share .icon-xiazai10{
  font-size: 24rpx;
}
