<template name="itemTwo">
  <view class="goods-item-two" bindtap='goodsDetails' data-goodsId='{{item.goodsId}}'>
    <view class='item-box'>
      <view>
        <view class='goods-item-pic'>
          <image src='{{item.imgSrc}}'></image>
        </view>
        <view class='goods-item-tow-text'>
          <text class='goods-item-two-title'>{{item.title}}</text>
        </view>
        <view class='goods-item-two-text1'>
          <text class='goods-item-price'>￥{{item.goodsPrice}}</text>
          <text class='goods-item-sales_volume'>销量{{item.salesVolume}}件</text>
        </view>
      </view>
      <view class='goods-item-two-text2'>
        <text class='coupon-price'>￥{{item.finalPrice}}</text>
        <icon catchtap='clickFavTab' data-item='{{item}}' data-type='goodsItems' data-index='{{index}}' class="icon iconfont {{item.isFav?'icon-xin':'icon-heart'}}"></icon>
      </view>

      <view class='goods-item-coupon'>
        <view class='goods-item-coupon-text'>
          购买送
        </view>
        <text class='goods-item_integral'> 2觅豆</text>
      </view>
      <!-- <view></view> -->
    </view>
  </view>
</template>