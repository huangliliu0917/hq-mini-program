.goods-item-container {
  width: 100%;
  height: 300rpx;
  padding: 10px;
  box-sizing: border-box;
}

.goods-item-left {
  display: flex;
  flex-direction: column;
  float: left;
  width: 240rpx;
}

.goods-item-left image {
  width: 240rpx;
  height: 260rpx;
}

.goods-item-right {
  display: flex;
  flex-direction: column;
  padding-left: 15rpx;
  box-sizing: border-box;
}

.goods-item-logo image {
  width: 30rpx;
  height: 30rpx;
  vertical-align: middle;
}

.goods-item-title {
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  font-size: 14px;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.oldprice {
  font-size: 42rpx;
  text-decoration: line-through;
  color: #acacac;
}

.icon-heart, .icon-xin {
  float: right;
  font-size: 46rpx;
}

.icon-heart {
  color: #acacac;
}

.icon-xin{
  color: #fe4c55;
}

.old-ticket_sales,.new-ticket_sales {
  margin-top: 10rpx;
  display: flex;
  flex-direction: row;
   justify-content: space-between; 
}

.price_ticket {
  width: 120rpx;
  height: 40rpx;
  font-size: 32rpx;
  border: 1px solid #fe4c55;
  border-radius: 30rpx;
  text-align: center;
   line-height: 40rpx; 
  color: #fe4c55;
  font-weight: normal;
}

.sales_volume {
  font-size: 36rpx;
  color: #acacac;
  margin-top: -2rpx;
}

.new-price_ticket {
  margin-top: 4rpx;
  font-size: 40rpx;
  font-weight: bold;
}

.new-price_ticket .price {
  color: #fe4c55;
}

.share_make {
  width: 200rpx;
  font-size: 28rpx;
  color: #fe4c55;
  border: 1px solid #fe4c55;
  background-color: #fef8f7;
  border-radius: 40rpx;
  text-align: center;
}
