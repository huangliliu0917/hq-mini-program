.goods-item-two {
  width: 50%;
  display: inline-block;
}

.goods-item-two image {
  width: 100%;
  height: 330rpx;
}

.item-box {
  padding: 10px;
}

.goods-item-tow-text image {
  width: 30rpx;
  height: 30rpx;
}

.goods-item-tow-text {
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  font-size: 28rpx;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.goods-item-two-text1 {
  height: 30rpx;
  margin-top: 15rpx;
}

.icon-shoucang-xin {
  float: right;
  color: #acacac;
  font-size: 46rpx;
  margin-top: -5rpx;
}

.goods-item-two-text2 text {
  color: #000;
  font-size: 26rpx;
  
}

.goods-item-two-text2 {
  margin-top: 30rpx;
  height: 50rpx;
  font-size: 23rpx;
  line-height: 50rpx;
  font-weight: bold;
}

.goods-item-two-text2 .coupon-price {
  color: #fe4c55;
  font-size: 28rpx;
}

.goods-item-two-text3 {
  display: flex;
  flex-direction: row;
  margin-top: 20px;
}

.goods-item-two-title {
  font-size: 28rpx;
  margin-top: 0px;
  color: #434343;
}

.goods-item-price {
  color: #acacac;
  float: left;
  font-size: 23rpx;
  text-decoration: line-through;
}

.goods-item-coupon-text {
  padding: 0px 5px 0px 5px;
  height: 30rpx;
  line-height: 30rpx;
  text-align: center;
  display: inline-block;
  font-size: 20rpx;
  color: #fe4c55;
  border: 1px solid #fe4c55;
  border-radius: 50px;
}

.zuanshi {
  background-color: #fff7f8;
  margin-left: 10px;
}

.goods-item-coupon-text .icon-zuanshi {
  margin-top: -30rpx;
  font-size: 20rpx;
}

.goods-item-sales_volume {
  font-size: 20rpx;
  color: #acacac;
  float: right;
}
