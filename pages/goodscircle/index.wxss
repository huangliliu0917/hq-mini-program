@import "../template/goodscircle/good-scircle-template.wxss";

.goods-circle_header {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  color: #838383;
  font-size: 28rpx;
  border-top: 1px solid #b2b2b2;
  border-bottom: 1px solid #b2b2b2;
}

.goods-circle_header .tab-item {
  display: inline-block;
  width: 25%;
  text-align: center;
}

.goods-circle_header .tab-item.active {
  color: #FE4C55;
  position: relative;
}

.goods-circle_header .tab-item.active:after {
  content: "";
  display: block;
  height: 8rpx;
  width: 134rpx;
  background: #FE4C55;
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translate(-54%);
  border-radius: 16rpx;
}

.category-two-show{
  display: block;  
}
.category-two-display{
  display: none;  
}

.tab-content{
  background-color: #f2f2f2;
}