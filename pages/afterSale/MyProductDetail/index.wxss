.status {
  font-size: 42rpx;
  margin: 10rpx 30rpx;
  text-align: center;
}

.feedback {
  margin: 10rpx 10rpx;
  text-align: right;
}

.feedback text {
  font-size: 24rpx;
  padding: 8rpx 28rpx;
  border-radius: 10rpx;
  border: 1px solid #e41436;
}

.my-product_detail {
  margin-top: 20rpx;
  background-color: #fff;
  border-top: 1px solid #ddd;
  border-bottom: 1px solid #ddd;
}

.my-product_detail>view {
  margin: 0 30rpx;
  border-bottom: 1px dashed #ddd;
}

.my-product_detail>view:last-child {
  border-bottom: none;
}

.my-product_detail {
  font-size: 24rpx;
  padding: 20rpx 30rpx 20rpx 0;
  box-sizing: border-box;
}

.my-product_detail>view {
  margin-left: 30rpx;
}

.ordinal {
  padding-bottom: 10rpx;
}

.ordinal, .order-product {
  border-bottom: 2px dashed #ddd;
}

.ordinal view {
  padding: 10rpx 0;
}

.order-product {
  display: flex;
  flex-direction: row;
  padding: 20rpx 0 30rpx;
}

.order-product image {
  width: 80rpx;
  height: 80rpx;
  margin-right: 30rpx;
}

.order-product_title {
  display: flex;
  flex-direction: column;
}

.order-product_title text {
  line-height: 1.6;
}

.ordinal-other {
  color: #999;
  margin-top: 10rpx;
}

.ordinal-other>view {
  padding: 8rpx 0;
}

.negotiate {
  margin-top: 20rpx;
  font-size: 24rpx;
}

.negotiate-status,.negotiate-title {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  background-color: #fff;
}

.negotiate-title{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-bottom: 6rpx;
}

.negititate-reason{
  margin-top: 20rpx;
  font-size: 24rpx;
}
.negotiate-details{
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  background-color: #fff;
}
.negotiate-details > view{
  height: 48rpx;
  line-height: 48rpx;
}