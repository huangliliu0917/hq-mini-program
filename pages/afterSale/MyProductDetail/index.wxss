
.status {
  font-size: 42rpx;
  margin: 10rpx 30rpx;
  text-align: center;
}

.feedback {
  margin: 10rpx 10rpx;
  text-align: right;
}

.feedback text {
  font-size: 24rpx;
  padding: 8rpx 28rpx;
  border-radius: 10rpx;
  border: 1px solid #e41436;
}

.my-product_detail{
  margin-top: 20rpx;
  background-color: #fff;
  border-top: 1px solid #ddd;
  border-bottom: 1px solid #ddd;
}

.my-product_detail>view{
  margin: 0 30rpx;
  border-bottom: 1px dashed #ddd;
}

.my-product_detail>view:last-child{
  border-bottom: none;
}