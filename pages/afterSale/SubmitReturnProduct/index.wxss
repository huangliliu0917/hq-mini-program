.header {
  padding: 30rpx;
  box-sizing: border-box;
}

.order-num {
  height: 52rpx;
  line-height: 52rpx;
  font-size: 24rpx;
  border-bottom: 1px dashed #ddd;
}

.order-details {
  padding: 30rpx 0;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  border-bottom: 1px dashed #ddd;
}

.order-details image {
  width: 120rpx;
  height: 120rpx;
  margin-right: 30rpx;
}

.order-details_title {
  display: flex;
  flex-direction: row;
  width: 100%;
  font-size: 32rpx;
}

.shop_title {
  flex: 1;
  width: 75%;
}

.price_num{
  display: flex;
  flex-direction: column;
  text-align: right;
}

.apply-reason{
  font-size: 24rpx;
  padding: 30rpx 0;
}

.apply-reason > view{
  margin-top: 10rpx;
  width: 100%;
  height: 56rpx;
  line-height: 56rpx;
}

.weui-cells{
  background-color: #F0EFF5;
}
.weui-input{
  width: 320rpx;
  height: 56rpx;
  min-height: 56rpx;
  line-height: 56rpx;
  border: 1px solid #ddd;
  color: #000;
  padding: 0 10rpx;
}

.weui-label{
  width: 120rpx;
}