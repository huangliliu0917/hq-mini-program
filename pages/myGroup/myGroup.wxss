.my-group_control {
  width: 100%;
  height: 100%;
  background-color: #f2f2f2;
}

.my-group-image {
  width: 100%;
  height: 300rpx;
  background-color: skyblue;
  margin-bottom: 18rpx;
}

.recommend {
  height: 312rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  margin-bottom: 18rpx;
  background-color: #fff;
  box-sizing: border-box;
}

.recommend view {
  width: 100%;
  height: 72rpx;
  display: flex;
  flex-direction: row;
  text-align: center;
}

.recommend view text {
  display: inline-block;
  width: 25%;
  line-height: 72rpx;
  text-align: center;
  font-size: 24rpx;
  color: #888;
}

.recommend-type {
  font-size: 29rpx;
  color: #3d3d3d;
  border-bottom: 2rpx solid #ddd;
}

.recommend-director {
  background-color: #fefdfd;
}

.direct-relation {
  background-color: #fff;
}

.direct-relation .direct-relation-title {
  display: block;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 29rpx;
  color: #888;
  padding: 0 47rpx;
  border-bottom: 2rpx solid #ddd;
  box-sizing: border-box;
}

.direct-relation_item {
  padding: 30rpx;
  height: 67rpx;
  display: flex;
  flex-direction: row;
  border-bottom: 2rpx solid #ddd;
  font-size: 24rpx;
  color: #3d3d3d;
}

.item-msg {
  display: flex;
  flex-direction: row;
}

.item-msg_logo image {
  width: 77rpx;
  height: 77rpx;
  border-radius: 77rpx;
  margin-right: 20rpx;
}

.item-msg_name, .invitation-contribute {
  display: flex;
  flex-direction: column;
  line-height: 40rpx;
}

.invitation-contribute {
  margin-left: 250rpx;
}

.item-msg_time {
  color: #c2c2c2;
}
