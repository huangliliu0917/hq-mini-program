<import src="../template/goods-item/goods-item-two-template.wxml" />
<import src="../template/search/search-template" />

<view>
  <template is="search-header" />
  <view class='category-goods-filter'>
    <view class='{{filterTap==1?"active":""}}' bindtap='clickfilterTap' data-type='1' data-msg='销量'>销量</view>
    <view class='{{filterTap==2?"active":""}}' bindtap='clickfilterTap' data-type='2' data-msg='最新'>最新</view>
    <view class='{{filterTap==3?"active":""}}' bindtap='clickfilterTap' data-type='3' data-sort='asc' data-msg='价格'>价格</view>
    <view class='{{filterTap==4?"active":""}}' bindtap='clickfilterTap' data-type='4' data-msg='最新'>综合</view>
    <view data-type='5' data-msg='筛选'>筛选</view>
  </view>
</view>
<view class='separator'>
</view>
<view>
  <block wx:for="{{goodsItems}}" wx:key="item">
    <template is="itemTwo" data="{{item,index}}" />
  </block>
</view> 