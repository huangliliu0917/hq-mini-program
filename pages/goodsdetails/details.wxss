.goods-details-main-pic {
  background-color: #fff;
}

.goods-details-main-pic image {
  width: 100%;
}

.goods-details-info-box {
  background-color: #fff;
}

.goods-item-title {
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  font-size: 34rpx;
  font-weight: 800;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  padding: 33rpx 30rpx 10rpx;
}

.send-specification {
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  font-size: 28rpx;
  font-weight: 600;
  color: #e41436;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  padding: 0rpx 30rpx 10rpx;
}

.product-trademark {
  font-size: 28rpx;
  font-weight: 600;
  padding: 0rpx 30rpx 10rpx;
}

.product-trademark text {
  display: inline-block;
  font-size: 24rpx;
  padding: 0 10rpx;
  border: 1px solid #cbcbcb;
  border-radius: 4rpx;
}

.goods-item-two-text1 {
  margin: 0rpx 30rpx;
  font-size: 28rpx;
  color: #acacac;
  display: flex;
  flex-direction: column;
  border-bottom: 1px solid #f0eff5;
}

.goods-item-two-text1 text {
  margin-bottom: 20rpx;
}

.goods-item-price {
  text-decoration: line-through;
}

.goods-item-two-text2 {
  padding: 0 30rpx;
}

.goods-final-price {
  font-size: 40rpx;
  font-weight: 600;
  color: #e41436;
}

.select-size {
  padding: 30rpx 50rpx 30rpx 30rpx;
  font-size: 28rpx;
}

.promotion {
  margin: 20rpx 0;
  padding: 30rpx 30rpx 18rpx;
  font-size: 24rpx;
  background-color: #fff;
  display: flex;
  flex-direction: row;
}

.promotion > text {
  white-space: nowrap;
}

.promotion .ellips {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.goods-details image {
  width: 100%;
}

.bottom-bar {
  position: fixed;
  bottom: 0;
  height: 99rpx;
  width: 100%;
  z-index: 500;
  display: flex;
  flex-direction: row;
}

.item-bar {
  text-align: center;
  height: 99rpx;
  border-right: 2rpx solid #f0eff5;
}

.item-bar.collect {
  width: 141rpx;
  background-color: #fff;
  font-size: 20rpx;
  color: #000;
  padding-top: 10rpx;
  box-sizing: border-box;
}

.item-bar-right {
  width: 100%;
  height: 99rpx;
  display: flex;
  flex-direction: row;
}

.item-bar-right .item-bar {
  border-right: none;
}

.item-bar.buy {
  background-color: #f5f5f5;
  color: #000;
}

.item-bar.share {
  background-color: #e41436;
  color: #fff;
}

.item-bar.share, .item-bar.buy {
  line-height: 100%;
  width: 50%;
}

.item-bar.buy text, .item-bar.share text {
  display: inline-block;
  line-height: 99rpx;
  font-size: 30rpx;
  margin-left: 5rpx;
}

.icon-kefu, .icon-shouye, .icon-goumai {
  font-size: 37rpx;
  display: block;
}

/*content*/

.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
}

.drawer_attr_box {
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 1001;
  background: #fff;
}

.drawer_content {
  padding-top: 20rpx;
}

.size-header {
  position: relative;
  height: 196rpx;
  width: 100%;
  display: flex;
  font-size: 28rpx;
  flex-direction: row;
  border-bottom: 1px solid #f0eff5;
  padding: 0 20rpx;
}

.goods-image {
  margin-top: -50rpx;
  padding: 6rpx;
  height: 200rpx;
  width: 200rpx;
  border: 1px solid #f0eff5;
  border-radius: 8rpx;
  background-color: #fff;
  margin-right: 20rpx;
}

.goods-image image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
}

.buy-select {
  margin: 0rpx 30rpx;
  padding: 33rpx 0;
  border-bottom: 1px solid #f0eff5;
  font-size: 28rpx;
}

.select_size text {
  display: inline-block;
  padding: 18rpx 30rpx;
  border: 1px solid #f0eff5;
  margin-right: 27rpx;
  border-radius: 8rpx;
  margin-top: 20rpx;
}

.select_size .active {
  background-color: #e41436;
  color: #fff;
  border: none;
}

.buy_num {
  margin-top: 30rpx;
  padding: 0 30rpx 90rpx;
  font-size: 28rpx;
  color: #acacac;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.buy-num_title {
  height: 62rpx;
  line-height: 62rpx;
}

.add_minus {
  height: 62rpx;
  /* border: 1rpx solid #f0eff5; */
  border-radius: 8rpx;
}

.add_minus text {
  display: inline-block;
  height: 60rpx;
  padding: 0 29rpx;
  line-height: 60rpx;
  /* border-left: 1rpx solid #f0eff5; */
}

/* .add_minus text:first-child {
  border-left: none;
} */

.submit {
  width: 100%;
  height: 95rpx;
  color: #fff;
  font-size: 32rpx;
  line-height: 95rpx;
  text-align: center;
  background-color: #e41436;
}

.no_select {
  /* border: 1px dashed #f0eff5; */
  background-color: #f5f5f5;
  color: #ddd;
}

.calculate {
  color: #000;
}
