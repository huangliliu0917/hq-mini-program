    <text class='allOrder' style='float:right;'></text>
  </view>

  <view class='separator1'></view>

  <view class='goods-details-info'>
    <view class='goods-details'>
      <image src='http://t00img.yangkeduo.com/t05img/images/2018-05-29/af95c46dc07e8a0a74d2cbf800fbd07d.jpeg'></image>
