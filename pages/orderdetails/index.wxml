<import src="../template/backTop/backTop" />

<view wx:if="{{detail == 1}}">
  <view class="consignee-information">
    <text>收货人：XX</text>
    <text>联系方式：1500000000</text> 
    <text>收获地址：</text>
    <text>杭州市滨江区阡陌路22号智慧e谷B幢4楼</text>
  </view>

  <view class='goods-information'>
    <view class='shop_name'>供应商名称/自营名称</view>
    <view class='my-order_con' catchtap='_goGoodsDetails'>
      <view>
        <image src='http://t05img.yangkeduo.com/images/2018-05-04/763d35d3060a752f6b296cf0db710094.jpeg'></image>
      </view>
      <view class='goods_title'>
        <view class='title_con'>
          <text>自由物体组合体</text>
        </view>
        <view class='price_num'>
          <text style='font-weight: 800;'>￥20</text>
          <text style='color: #999;'>x1</text>
        </view>
      </view>
    </view>
    <view class='goods-other'>
      <view>
        <text>配送方式</text>
        <text style='color:#C8C7CD;float:right;'>快递(费用:￥0元)</text>
      </view>
      <view class='feedback'>备注留言</view>
      <view>
        <text>应付金额</text>
        <text style='color:#E41436;float:right;'>￥1320.00</text>
      </view>
    </view>
  </view>

  <view class='pay-way'>
    <view class='pay-way_wx'>
      <text class='active'>微信支付</text>
    </view>
  </view>

  <view class='discounts'>
    <view class='discounts-title'>优惠</view>
    <view class='discounts-con'>
      <view>
        <view class='left'>
          <text>积分 </text>
          <text style='color:#E41436;'>2000积分</text>
        </view>
        <view class='right'>
          <text>-￥20.00</text>
          <icon class='icon iconfont icon-xuanzhong'></icon>
        </view>
      </view>
      <view>
        <view class='left'>
          <text>余额 </text>
          <text style='color:#E41436;'>2000积分</text>
        </view>
        <view class='right'>
          <text>-￥20.00</text>
          <icon class='icon iconfont icon-xuanzhong'></icon>
        </view>
      </view>
      <view>
        <view class='left'>
          <text>优惠券 </text>
          <text style='color:#E41436;'>0张</text>
        </view>
        <view class='right' bindtap="actionSheetTap">
          <text>选择/无可用</text>
          <text class='after_all'></text>
        </view>
      </view>
      <view>
        <view class='left'>
          <text>开发票 </text>
        </view>
        <view class='right'>
          <text style='color:#c8c7cd;'>无</text>
          <text class='after_all'></text>
        </view>
      </view>
    </view>
  </view>

  <view style='height:130rpx;'></view>
  <view class='submit'>
    <text>应付金额：￥2.00</text>
    <text class='sub_btn'>提交订单</text>
  </view>
</view>


<view class='trade-successfully' wx:if="{{detail == 2 || detail == 3}}">
  <view class='success-header'>
    <view class='success-title' wx:if="{{detail == 2}}">交易成功</view>
    <view>订单号：{{orderDetail.orderId}}</view>
    <view>
      <text>下单时间：{{orderDetail.createTime}}</text>
      <text style='float:right' catchtap='watchStatus' wx:if="{{watchStatus !=1}}">【订单状态】</text>
    </view>
    <view wx:if="{{watchStatus == 1}}">
      <text>订单状态：【{{orderDetail.payStatus == 0?'未付款':'已付款'}}】【{{orderDetail.shipStatus == 0?'未发货':'已发货'}}】</text>
    </view>
  </view>

  <view class='addressee'>
    <view>
      <text>收货人：{{orderDetail.shipName}}</text>
      <text style='float:right;'>{{orderDetail.shipMobile}}</text>
    </view>
    <view>
      <view>收货地址：</view>
      <view>{{orderDetail.shipAddress}}</view>
    </view>
  </view>

  <view class='goods-information'>
    <view class='shop_name'>
      <text>供应商名称/自营名称</text>
      <text class='allOrder' style='float:right;margin-right:30rpx;'></text>
    </view>
    <blcok wx:for="{{orderDetail.goods}}" wx:for-item="item">
      <view class='my-order_con' catchtap='_goGoodsDetails'>
        <view>
          <image src='{{item.picUrl}}'></image>
        </view>
        <view class='goods_other' style='width:100%;'>
          <view class='goods_title'>
            <view class='title_con'>
              <text>{{item.name}}</text>
            </view>
            <view class='price_num'>
              <text style='font-weight: 800;'>￥{{item.price}}</text>
              <text style='color: #999;'>x{{item.num}}</text>
            </view>
          </view>
          <!-- <view class='comment '>
            <text>评价</text>
            <text>售后</text>
          </view> -->
        </view>
      </view>
    </blcok>
  </view>

  <view class='ramark'>
    备注留言：{{orderDetail.memo}}
  </view>

  <view class='payroll-working'>
    <view class='payroll-title'>支付明细</view>
    <view class='discounts-con'>
      <view>
        <view class='left'>
          <text>合计</text>
        </view>
        <view class='right'>
          <text>￥{{orderDetail.totalMoney}}</text>
        </view>
      </view>
      <view>
        <view class='left'>
          <text>抵用积分</text>
        </view>
        <view class='right'>
          <text>￥{{orderDetail.cutMoney}}</text>
        </view>
      </view>
      <view>
        <view class='left'>
          <text>余额支付</text>
        </view>
        <view class='right'>
          <text>￥{{orderDetail.remainMoney}}</text>
        </view>
      </view>
      <view>
        <view class='left'>
          <text>线上支付</text>
        </view>
        <view class='right'>
          <text>￥{{orderDetail.onlineMoney}}</text>
        </view>
      </view>
    </view>
  </view>

  <view class='contact-service'>联系客服</view>

  <view class='logistics'>
    <view class='logistics-title'>物流信息</view>
    <view class='logistics-odd' wx:if="{{orderDetail.logistics.LogicNo=='' || orderDetail.logistics[0].LogicNo ==''}}">暂未查到物流信息</view>
    <view wx:else>
      <view class='logistics-odd'>{{orderDetail.logistics.LogicCompany || orderDetail.logistics[0].LogicCompany}}运单号 ：{{orderDetail.logistics.LogicNo || orderDetail.logistics[0].LogicNo}}</view>
      <view class='logistics-item'>
        <view wx:for="{{orderDetail.logistics}}" wx:for-item="logistics">
          <view>{{logistics.LogicContext}}</view>
          <view>{{logistics.LogicTime}}</view>
        </view>
      </view>
    </view>
  </view>
</view>

<template is="backTop" wx:if="{{backTopValue ==true}}" />