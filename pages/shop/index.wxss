.no-shopping {
  width: 100%;
  padding-top: 40%;
}

.shopping-cart {
  /* margin: 0 auto;  */
  width: 100%;
  height: 300rpx;
  text-align: center;
  padding: 50rpx;
  box-sizing: border-box;
  color: #ccc;
}

.shopping-cart .icon {
  font-size: 120rpx;
}

.shopping-cart .text {
  font-size: 32rpx;
  margin-top: 10rpx;
}

.go-around {
  width: 100%;
  text-align: center;
  color: #999;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 36rpx;
}

.merchant {
  height: 78rpx;
  width: 100%;
  padding: 0 30rpx;
  line-height: 78rpx;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 28rpx;
  color: #000;
  box-sizing: border-box;
  border-top: 1px solid #f2f2f2;
  border-bottom: 1px solid #f2f2f2;
}

.merchant .icon {
  margin-right: 20rpx;
}

.allOrder {
  color: #000;
}

.touch-item {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  overflow: hidden;
}

.del {
  font-size: 28rpx;
  background-color: #e41436;
  width: 120rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  -webkit-transform: translateX(120rpx);
  transform: translateX(120rpx);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
}

.touch-move-active .item, .touch-move-active .del {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}

.item {
  width: 100%;
  padding: 30rpx;
  background-color: #fff;
  border-bottom: 1px solid #f0eff5;
  margin-right: 0;
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(120rpx);
  transform: translateX(120rpx);
  margin-left: -120rpx;
}

.shop-item {
  display: flex;
  flex-direction: row;
}

.shop-item .icon {
  font-size: 40rpx;
  margin-right: 20rpx;
  color: #ddd;
}

.my-order_con {
  flex: 1;
  width: 100%;
  font-size: 28rpx;
  display: flex;
  flex-direction: row;
}

.my-order_con image {
  width: 120rpx;
  height: 120rpx;
  margin-right: 30rpx;
}

.goods_title {
  flex: 1;
  width: 100%;
  display: flex;
  flex-direction: row;
  box-sizing: border-box;
}

.title_con {
  width: 75%;
  display: flex;
  flex-direction: column;
  color: #666;
  margin-right: 10rpx;
}

.title_con text {
  line-height: 1.2;
}

.price_num {
  display: flex;
  flex-direction: column;
  text-align: right;
}

.shop_title {
  white-space: pre-wrap;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.item-other {
  margin-top: 30rpx;
  font-size: 24rpx;
  color: #e41436;
}

.balance {
  position: fixed;
  bottom: 0;
  left: 0;
  height: 96rpx;
  width: 100%;
  padding: 0 30rpx;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  box-sizing: border-box;
  border-bottom: 1px solid #f0eff5;
}

.balance-left {
  display: flex;
  flex-direction: row;
  font-size: 24rpx;
  margin-top: 10rpx;
}

.balance-left .icon {
  font-size: 38rpx;
  margin-right: 20rpx;
}

.pay-total {
  display: flex;
  flex-direction: column;
}

.pay-total>view:first-child {
  font-size: 28rpx;
}

.balance-right {
  width: 108rpx;
  height: 64rpx;
  background-color: #e41436;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  line-height: 64rpx;
  margin-top: 14rpx;
  border-radius: 10rpx;
}
